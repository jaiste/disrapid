{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Attach core",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src/core/disrapidBot",
                    "remoteRoot": "/app",
                }
            ],
            "port": 5050,
            "host": "localhost"
        },
        {
            "name": "Attach web",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src/web/disrapidWeb",
                    "remoteRoot": "/app",
                }
            ],
            "port": 5051,
            "host": "localhost"
        },
    ]
}